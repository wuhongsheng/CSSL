<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="java.util.ArrayList"/>

        <variable
            name="list"
            type="ArrayList&lt;String[]>"/>

        <variable
            name="url"
            type="String"/>

        <variable
            name="viewmodel"
            type="com.titan.cssl.projdetails.ProjDetailViewModel"/>
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()->viewmodel.showSubInfo(list)}"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/proj_summary_child_name"
                android:text="@{list.get(0)[0]}"/>

            <!--@{nameList[0]}-->
            <TextView
                style="@style/proj_summary_child_value"
                android:text="@{list.get(0)[1]}"/>
            <!--@{valueList[0]}-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/proj_summary_child_name"
                android:text="@{list.get(1)[0]}"/>

            <TextView
                style="@style/proj_summary_child_value"
                android:text="@{list.get(1)[1]}"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/proj_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/proj_summary_child_name"
                android:text="@{list.get(2)[0]}"/>

            <TextView
                android:id="@+id/supervise_people"
                style="@style/proj_summary_child_value"
                android:text="@{list.get(2)[1]}"/>

            <ImageView
                android:id="@+id/approval_image"
                android:layout_width="300dp"
                android:layout_height="50dp"/>

        </LinearLayout>
    </LinearLayout>
</layout>
