<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewmodel"
            type="com.titan.cssl.projdetails.ProjContentItemViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_horizontal"
        android:onClick="@{()->viewmodel.showSubInfo()}"
        android:orientation="vertical"
        android:showDividers="end">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/proj_summary_child_name"
                android:text="@{viewmodel.subItem.year}" />

            <!--@{nameList[0]}-->
            <TextView
                style="@style/proj_summary_child_value"
                android:text="@{viewmodel.subItem.yearValue}" />
            <!--@{valueList[0]}-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/proj_summary_child_name"
                android:text="@{viewmodel.subItem.investment}" />

            <TextView
                style="@style/proj_summary_child_value"
                android:text="@{viewmodel.subItem.investmentValue}" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/proj_summary_child_name"
                android:text="@{viewmodel.subItem.instructions}" />

            <TextView
                style="@style/proj_summary_child_value"
                android:text="@{viewmodel.subItem.instructionsValue}" />

        </LinearLayout>
    </LinearLayout>
</layout>
