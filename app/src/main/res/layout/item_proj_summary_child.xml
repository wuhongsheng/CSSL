<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="java.util.ArrayList"/>
        <variable
            name="list"
            type="ArrayList&lt;String[]>"/>
        <variable
            name="viewmodel"
            type="com.titan.cssl.projdetails.ProjDetailViewModel"/>
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/divider_horizontal"
        android:showDividers="end"
        android:onClick="@{()->viewmodel.showSubInfo(list)}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@{list.get(0)[0]}"
                style="@style/proj_summary_child_name"/>

            <!--@{nameList[0]}-->
            <TextView
                android:text="@{list.get(0)[1]}"
                style="@style/proj_summary_child_value"/>
            <!--@{valueList[0]}-->

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@{list.get(1)[0]}"
                style="@style/proj_summary_child_name"/>

            <TextView
                android:text="@{list.get(1)[1]}"
                style="@style/proj_summary_child_value"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@{list.get(2)[0]}"
                style="@style/proj_summary_child_name"/>

            <TextView
                android:text="@{list.get(2)[1]}"
                style="@style/proj_summary_child_value"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@{list.get(3)[0]}"
                style="@style/proj_summary_child_name"/>

            <TextView
                android:text="@{list.get(3)[1]}"
                style="@style/proj_summary_child_value"/>

        </LinearLayout>
    </LinearLayout>
</layout>
